@model RestuorantEditVm
@{
    ViewData["Title"] = "Edit";
}

<div style="background-color:gainsboro" class="container">
    <div class="card-body row">
        <div class="text text-danger" asp-validation-summary="ModelOnly"></div>
        <form method="post" class="forms-sample" enctype="multipart/form-data">
            <h1 style="text-align: center; color: black; margin-bottom:50px;">Restaurant Details</h1>
            <div class="row">
                <div class="col-md-6">
                    <label style="margin-bottom:10px; font-size:20px;" asp-for="@Model.restuorant.Title">Title</label>
                    <textarea asp-for="@Model.restuorant.Title" type="text"></textarea>
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.restuorant.Title"></span>
                </div>
                <div class="col-md-6" margin-bottom:40px; ">
                    <label style="margin-bottom:10px;  font-size:20px;" font-size:20px;"  asp-for="@Model.ImageFile">Main Logo</label>
                    <input asp-for="@Model.ImageFile" accept="image/*" class="form-control">
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.ImageFile"></span>
                    <p style="margin-top:15px;">Exsist Logo</p>
                    <img style="margin-top:15px; display:block;" height="230" src="~/assets/image/@Model.restuorant.Image" />
                </div>

            </div>

            <div style="text-align:end;">
                <label style="margin-bottom:10px; font-size:20px;" asp-for="@Model.restuorant.IsCampaign">Swich Discount</label>
                <input asp-for="@Model.restuorant.IsCampaign" type="checkbox" />
                <span class="mt-2 text text-danger" asp-validation-for="@Model.restuorant.IsCampaign"></span>
            </div>
            <div class="row align-items-center">

                <div class="col-md-4">
                    <label style="margin-bottom:10px; font-size:20px;" asp-for="@Model.restuorant.Name">Restuorant Name</label>
                    <input class="form-control" asp-for="@Model.restuorant.Name" type="text" />
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.restuorant.Name"></span>
                </div>
                <div class="col-md-4">
                    <label style="margin-bottom:10px; font-size:20px;" asp-for="@Model.restuorant.Adress">Adress</label>
                    <input class="form-control" asp-for="@Model.restuorant.Adress" type="text" />
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.restuorant.Adress"></span>
                </div>

                <div class="col-md-4 ">
                    <label style="margin-bottom:10px; font-size:20px;" asp-for="@Model.restuorant.Campaign">Campaign Precent</label>
                    <input class="form-control precent" asp-for="@Model.restuorant.Campaign" type="number">
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.restuorant.Campaign"></span>
                </div>
            </div>

            <h1 style="text-align: center; color: black; margin-bottom:50px;">Admin Details</h1>
            <div class="col-md-4 ">
            <label asp-for="@Model.AppUser.FullName">FullName</label>
            <input asp-for="@Model.AppUser.FullName" type="text" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.AppUser.FullName"></span>
        </div>
            <div class="col-md-4 ">
                <label asp-for="@Model.AppUser.UserName">UserName</label>
                <input asp-for="@Model.AppUser.UserName" type="text" class="form-control">
                <span class="mt-2 text text-danger" asp-validation-for="@Model.AppUser.UserName"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="@Model.AppUser.Email">Email</label>
                <input asp-for="@Model.AppUser.Email" type="email" class="form-control">
                <span class="mt-2 text text-danger" asp-validation-for="@Model.AppUser.Email"></span>
            </div>
            <div class="col-md-4 ">
                <label asp-for="@Model.AppUser.PhoneNumber">PhoneNumber</label>
                <input asp-for="@Model.AppUser.PhoneNumber" type="tel" class="form-control">
                <span class="mt-2 text text-danger" asp-validation-for="@Model.AppUser.PhoneNumber"></span>
            </div>
       
            <div class="col-md-12 mt-3">
                <a class="btn btn-dark" asp-controller="setting" asp-action="index"><i class="fas fa-undo"></i> Back</a>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

}

